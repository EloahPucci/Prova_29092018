<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#f5f5f5"
    android:columnCount="2"
    android:rowCount="11">

    <Button
        android:id="@+id/bt1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:background="#ffd700"
        android:onClick="valorDaConta"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="0"
        android:text="A moda do freguês"
        android:textColor="#ffd700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="1"
        android:text="Escolha no máximo 5 ingredientes"
        android:textColor="#808080"
        android:textSize="10dp" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:background="#ffd700"
        android:onClick="valorDaConta"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="2"
        android:text="4 queijos"
        android:textColor="#ffd700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="3"
        android:text="Gorgonzola, mussarela, parmesao, provolone"
        android:textColor="#808080"
        android:textSize="10dp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:background="#ffd700"
        android:onClick="valorDaConta"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="4"
        android:text="Aliche"
        android:textColor="#ffd700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="5"
        android:text="Aliche e mussarela"
        android:textColor="#808080"
        android:textSize="10dp" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:background="#ffd700"
        android:onClick="valorDaConta"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="6"
        android:text="Calabresa"
        android:textColor="#ffd700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="7"
        android:text="Calabresa com queijo mussarela"
        android:textColor="#808080"
        android:textSize="10dp" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|end"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_row="8"
        android:layout_rowSpan="2"
        android:background="#ffd700"
        android:onClick="valorDaConta"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="8"
        android:text="Peperoni"
        android:textColor="#ffd700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_row="9"
        android:text="Peperoni com queijo mussarela"
        android:textColor="#808080"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="10"
        android:background="#ffffff"
        android:paddingTop="32dp">


        <TextView
            android:id="@+id/visor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teste"
            android:textAlignment="center" />

    </LinearLayout>

</GridLayout>
